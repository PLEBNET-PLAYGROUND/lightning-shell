#!/bin/bash

if [ "$1" == 'describe' ]; then
        echo "A script that can be used to balance lightning channels of a LND node."
        exit 0
fi

if [ "$1" == 'url' ]; then
        echo "https://github.com/C-Otto/rebalance-lnd"
        exit 0
fi

/build/apps/rebalance-lnd/rebalance.py --grpc=${LND_IP}:${LND_GRPC_PORT} --lnddir=/lnd $@
