#!/bin/bash

if [ "$1" == 'describe' ]; then
        echo 'Script to make your LND node pefectly balanced as everything in life should be.'
        exit 0
fi

if [ "$1" == 'url' ]; then
        echo "https://github.com/cuaritas/perfectly-balanced"
        exit 0
fi

LND_DIR=/lnd REBALANCE_LND_FILEPATH=/build/apps/rebalance-lnd/rebalance.py /build/apps/perfectly-balanced/perfectlybalanced.sh $@
