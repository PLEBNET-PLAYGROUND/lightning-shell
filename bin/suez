#!/bin/bash

if [ "$1" == 'describe' ]; then
        echo "Tool for pretty printing and optimizing Lightning Network channels."
        exit 0
fi

if [ "$1" == 'url' ]; then
        echo "https://github.com/prusnak/suez"
        exit 0
fi

/build/apps/suez/suez --client-args=--rpcserver=${LND_IP}:${LND_GRPC_PORT} --client-args=--lnddir=/lnd $@
